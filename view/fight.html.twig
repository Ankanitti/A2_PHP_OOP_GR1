{% extends 'base.html.twig' %}

{% block content %}

    <div class="container">
        <div class="jumbotron">
            <h2 class="text-center">FIIIIGHT !</h2>
            <div class="row">
                <div class="col-md-5">
                    <div class="alert alert-info" role="alert">
                        <h3>Striker</h3>
                        <p>Striker Pokemon is {{ strikerPokemon.name }}</p>
                        {% if strikerPokemon.type == 1 %}
                            <p><em>Type</em>: Fire </p>
                        {% endif %}
                        {% if strikerPokemon.type == 2 %}
                            <p><em>Type</em>: Water </p>
                        {% endif %}
                        {% if strikerPokemon.type == 3 %}
                            <p><em>Type</em>: Plant </p>
                        {% endif %}
                        <p>HP: {{ strikerPokemon.hp }}</p>
                    </div>
                </div>
                <div class="col-md-2">
                    <p class="text-center" style="padding-top: 75px;">VS</p>
                </div>
                <div class="col-md-5">
                    <div class="alert alert-warning" role="alert">
                        <h3>Target</h3>
                        <p>Targeted Pokemon is {{ targetedPokemon.name }}</p>
                        {% if targetedPokemon.type == 1 %}
                            <p><em>Type</em>: Fire </p>
                        {% endif %}
                        {% if targetedPokemon.type == 2 %}
                            <p><em>Type</em>: Water </p>
                        {% endif %}
                        {% if targetedPokemon.type == 3 %}
                            <p><em>Type</em>: Plant </p>
                        {% endif %}
                        <p>HP: {{ targetedPokemon.hp }}</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-info" role="alert">
                        <p>Damage dealt by {{ strikerPokemon.name }} : {{ pokemonAttack }}</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-warning" role="alert">
                        <p>{{ targetedPokemon.name }} has {{ targetedHp }} hp remaining</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}