{% extends ('base.html.twig') %}

{% block content %}

    <div class="container">
        <div class="jumbotron">
            <h2 class="text-center">My Pokemon</h2>
            <div class="alert alert-warning" role="alert">
                <p class="text-center">Pokemon created by <strong>{{ userName }}</strong></p>
                <p><em>Name</em>: {{ userPokemon.name }}</p>
                <p><em>HP</em>: {{ userPokemon.hp }}</p>
                {% if pokemonType == 2 %}
                <p><em>Type</em>: Fire </p>
                {% endif %}
                {% if pokemonType == 3 %}
                    <p><em>Type</em>: Water </p>
                {% endif %}
                {% if pokemonType == 4 %}
                    <p><em>Type</em>: Plant </p>
                {% endif %}
            </div>
            {% if pokemonHp == 0 %}
                <p class="text-center"><a class="btn btn-primary btn-lg" href="revive.php" role="button">Revive your Pokemon !</a></p>
            {% endif %}
        </div>
    </div>

{% endblock %}